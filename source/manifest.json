{
  "name": "Better Browser",
  "version": "0.0.0",
  "description": "Configuration to make the web work with you, not against you.",
  "homepage_url": "https://github.com/brandon-mork/better-browser",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "settings/settings.html"
  },
  "content_scripts": [{ "matches": ["https://www.facebook.com/"], "css": ["facebook.css"] }]
}
